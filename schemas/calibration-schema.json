{
  "$id": "https://netvr.isbl.workers.dev/calibration",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "type": "object",
      "required": ["action", "calibrations"],
      "properties": {
        "$schema": { "$ref": "#/definitions/$schema" },
        "action": {
          "type": "string",
          "enum": ["set calibration"]
        },
        "calibrations": {
          "type": "array",
          "items": { "$ref": "#/definitions/calibration" }
        }
      }
    }
  ],
  "definitions": {
    "$schema": {
      "type": "string",
      "enum": [
        "https://netvr.isbl.workers.dev/schema/calibration",
        "./calibration-schema.json"
      ],
      "description": "Reference to this schema so that autocomplete and hover tooltips work."
    },
    "calibration": {
      "type": "object",
      "required": ["id", "translate", "rotate", "scale"],
      "properties": {
        "id": { "type": "number" },
        "translate": { "$ref": "#/definitions/vector3" },
        "rotate": { "$ref": "#/definitions/vector3" },
        "scale": { "$ref": "#/definitions/vector3" }
      }
    },
    "vector3": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    }
  }
}
